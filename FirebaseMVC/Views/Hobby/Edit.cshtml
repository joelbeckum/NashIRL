@model NashIRL.Models.Hobby

@{
    ViewData["Title"] = "Edit";
}

<h4 class="mb-4">Edit Hobby Name</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input asp-for="IsApproved" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="ApprovedBy" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="ApprovedOn" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="cancel">
    <a href="@Url.Action("Index", "Hobby")">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
