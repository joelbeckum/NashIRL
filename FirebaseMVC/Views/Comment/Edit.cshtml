@model NashIRL.Models.Comment

@{
    ViewData["Title"] = "Edit";
}

<h4 class="mb-4">Edit Comment</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" class="form-control shadow-textarea" rows="6" columns="40"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserProfileId" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="EventId" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="CreatedOn" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="comment-cancel">
    <a href="@Url.Action("Details", "Event", new { id = Model.EventId })">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
