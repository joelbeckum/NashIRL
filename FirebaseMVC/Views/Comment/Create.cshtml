@model NashIRL.Models.ViewModels.CommentFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h3 class="mb-4">New Comment</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment.Body" class="control-label">Enter Comment:</label>
                <textarea asp-for="Comment.Body" class="form-control shadow-textarea" rows="6" columns="40"></textarea>
                <span asp-validation-for="Comment.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="comment-cancel">
    <a href="@Url.Action("Details", "Event", new { id = Model.EventId })">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
