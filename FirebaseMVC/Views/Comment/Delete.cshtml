@model NashIRL.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<h3 class="mb-4">Are you sure you want to delete this comment?</h3>

<div>
    <dl class="row">


        <dt class = "col-sm-2 mb-4">
            @Html.DisplayNameFor(model => model.Body):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>



        <dt class = "col-sm-2 mb-4">
            Created On:
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedOn.ToShortDateString() at @string.Format("{0:h:mm tt}", Model.CreatedOn) 
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" href="@Url.Action("Details", "Event", new { id = Model.EventId })">Cancel</a>
    </form>
</div>
