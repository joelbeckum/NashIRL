@model NashIRL.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<h3 class="mb-4">Are you sure you want to delete this event?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2 mb-4">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2 mb-4">
            @Html.DisplayNameFor(model => model.Description):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2 mb-4">
            Created On:
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedOn.ToShortDateString() at @string.Format("{0:h:mm tt}", Model.CreatedOn)
        </dd>
        <dt class = "col-sm-2 mb-4">
            Date and Time:
        </dt>
        <dd class="col-sm-10">
            @Model.EventOn.ToShortDateString() at @string.Format("{0:h:mm tt}", Model.EventOn)
        </dd>
        <dt class = "col-sm-2 mb-4">
            Image URL:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
        <dt class = "col-sm-2 mb-4">
            Hobby:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hobby.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="@Url.Action("Details", new { id = Model.Id })">
            <div class="btn btn-primary">
                Cancel
            </div>
        </a>
    </form>
</div>
