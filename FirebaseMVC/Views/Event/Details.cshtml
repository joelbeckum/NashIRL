@model NashIRL.Models.ViewModels.EventDetailViewModel

@{
    ViewData["Title"] = "Details";
}

@if (Model.CurrentUserProfileId == Model.CurrentEvent.UserProfileId)
{
    <a href="@Url.Action("Edit", new { id = Model.CurrentEvent.Id })">
        <div class="btn btn-primary">
            Edit Event
        </div>
    </a>
    <a href="@Url.Action("Delete", new { id = Model.CurrentEvent.Id })">
        <div class="btn btn-primary">
            Delete Event
        </div>
    </a>
}
<h2>@Model.CurrentEvent.Name</h2>
<hr />
<div class="eventDetail-wrapper">
    @if (Model.CurrentEvent.ImageUrl != null)
    {
        <span class="eventDetail-image">
            <img src="@Model.CurrentEvent.ImageUrl" />
        </span>
    }
    <p class="eventDetail-description">
        @Model.CurrentEvent.Description
    </p>
    <p class="eventDetail-date">
        @Model.CurrentEvent.EventOn.ToShortDateString()
    </p>
</div>

<section class="comments">
    <h3 class="comments-title">Comments</h3>

    <a class="btn btn-primary" href="@Url.Action("Create", "Comment", new { id = Model.CurrentEvent.Id })">Add Comment</a>

    <div class="comments-wrapper">
        @foreach (var c in Model.Comments)
        {
            <div class="comment">
                <div class="comment-header">
                    @c.UserProfile.FirstName said at @c.CreatedOn:
                </div>
                <div class="comment-body">
                    @c.Body
                </div>
                @if (c.UserProfileId == Model.CurrentUserProfileId)
                {
                    <div class="comment-buttons">
                        <a class="btn" href="@Url.Action("Edit", "Comment", new { id = c.Id })">Edit</a>
                        <a class="btn" href="@Url.Action("Delete", "Comment", new { id = c.Id })">Delete</a>
                    </div>
                }
            </div>
        }
    </div>
</section>
